<Window x:Class="CSharpSpeedRush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C# Speed Rush" Height="550" Width="900">
    <Window.Resources>
        <LinearGradientBrush x:Key="VerticalGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#333" Offset="0"/>
            <GradientStop Color="#666" Offset="1"/>
        </LinearGradientBrush>
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="16" ShadowDepth="4" Color="#222"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Select Your Car:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <ComboBox x:Name="CarSelector" Width="180" Margin="0,0,10,0"/>
            <Button x:Name="StartRaceBtn" Content="Start Race" Click="StartGame_Click" Width="120"/>
        </StackPanel>
        <Border Grid.Row="1" CornerRadius="16" BorderBrush="#444" BorderThickness="3" Margin="0,0,0,10" Effect="{StaticResource DropShadowEffect}">
            <Grid>
                <Rectangle Height="350" Width="900" Fill="{StaticResource VerticalGradientBrush}" IsHitTestVisible="False"/>
                <Canvas x:Name="RaceCanvas" Height="350" Background="Transparent"/>
            </Grid>
        </Border>
        <TextBlock x:Name="StatusText" Grid.Row="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock x:Name="LeaderboardText" Grid.Row="3" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>